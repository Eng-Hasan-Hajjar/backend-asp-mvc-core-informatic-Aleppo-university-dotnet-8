<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - نظام الكلية</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;700&display=swap" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/style.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>

    <div class="container py-5">
        <div class="text-center mb-4">
            <!-- روابط التنقل الرئيسية -->
            <div class="btn-group mb-3" role="group">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">الرئيسية</a>
                <a asp-controller="Student" asp-action="Index" class="btn btn-outline-primary">قائمة الطلاب</a>
                <a asp-controller="Course" asp-action="Index" class="btn btn-outline-primary">المقررات الدراسية</a>
            </div>
        </div>
            @RenderBody()
            <!-- روابط إضافية في قسم منفصل -->
            <div class="mt-4 border-top pt-3">
                <h5>إدارة النظام:</h5>
                <ul class="list-group">
                    <li class="list-group-item">
                        <a asp-controller="Student" asp-action="Create" class="text-decoration-none">
                            <i class="fas fa-user-plus"></i> تسجيل طالب جديد
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a asp-controller="Grades" asp-action="Index" class="text-decoration-none">
                            <i class="fas fa-chart-bar"></i> إدارة الدرجات
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a asp-controller="Reports" asp-action="Generate" class="text-decoration-none">
                            <i class="fas fa-file-pdf"></i> توليد التقارير
                        </a>
                    </li>
                </ul>
            </div>



        <main class="py-4">
            <img src="@Url.Content("~/res/img/college-logo.png")" alt="شعار الكلية" class="college-logo mb-4" />
            @RenderBody()
        </main>
        <div>
            &copy; 2025 - نظام إدارة كلية الهندسة المعلوماتية - جميع الحقوق محفوظة
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
