@model informatic_asp_mvc.Models.Student
@{
    // هذه السطر ضروري إذا كان المودال يُستخدم كجزئي
    Layout = null; 
}

<div class="modal fade" id="studentModal" tabindex="-1" aria-labelledby="studentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="studentModalLabel">تسجيل طالب جديد</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="createForm" asp-action="Create">
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <div class="row g-3">
                        <!-- العمود الأول -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-account-outline me-1"></i> الاسم الكامل</label>
                                <input type="text" asp-for="STU_NAME" class="form-control" required pattern="[ء-ي\s]{3,}" />
                                <div class="invalid-feedback">يجب أن يحتوي على الأقل على 3 أحرف</div>
                                <span asp-validation-for="STU_NAME" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="NATIONAL_NUMBER" class="control-label">الرقم الوطني</label>
                                <input asp-for="NATIONAL_NUMBER" class="form-control" />
                                <span asp-validation-for="NATIONAL_NUMBER" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="PHONE_NUMBER" class="control-label">رقم الهاتف</label>
                                <input asp-for="PHONE_NUMBER" class="form-control" />
                                <span asp-validation-for="PHONE_NUMBER" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-human-male me-1"></i> اسم الأب</label>
                                <input type="text" asp-for="STU_FTHR" class="form-control" required />
                                <div class="invalid-feedback">هذا الحقل مطلوب</div>
                                <span asp-validation-for="STU_FTHR" class="text-danger"></span>

                            </div>

                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-human-female me-1"></i> اسم الأم</label>
                                <input type="text" asp-for="STU_MTHR" class="form-control" required />
                                <div class="invalid-feedback">هذا الحقل مطلوب</div>
                                <span asp-validation-for="STU_MTHR" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-calendar me-1"></i> تاريخ الميلاد</label>
                                <input type="date" asp-for="STU_BRTH" class="form-control" required max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                <div class="invalid-feedback">يرجى اختيار تاريخ صحيح</div>
                                <span asp-validation-for="STU_BRTH" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- العمود الثاني -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-calendar-check me-1"></i> تاريخ الالتحاق</label>
                                <input type="date" asp-for="JOIN_DATE" class="form-control" required />
                                <div class="invalid-feedback">هذا الحقل مطلوب</div>
                                <span asp-validation-for="JOIN_DATE" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-school me-1"></i> السنة الدراسية</label>
                                <select asp-for="STU_YEAR" class="form-select" required>
                                    <option value="" disabled selected>اختر السنة</option>
                                    <option value="1">الأولى</option>
                                    <option value="2">الثانية</option>
                                    <option value="3">الثالثة</option>
                                    <option value="4">الرابعة</option>
                                </select>
                                <div class="invalid-feedback">يرجى اختيار سنة دراسية</div>
                                <span asp-validation-for="STU_YEAR" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-shield-account me-1"></i> الحالة الدراسية</label>
                                <select asp-for="STU_STATE" class="form-select" required>
                                    <option value="ناجح">ناجح</option>
                                    <option value="منقول">منقول</option>
                                    <option value="راسب">راسب</option>
                                </select>
                                <div class="invalid-feedback">يرجى اختيار الحالة</div>
                                <span asp-validation-for="STU_STATE" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-lock me-1"></i> كلمة المرور</label>
                                <div class="input-group">
                                    <input type="password" asp-for="STU_PASS" class="form-control" required minlength="8" id="passwordInput" />
                                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                        <i class="mdi mdi-eye-outline"></i>
                                    </button>
                                    <div class="invalid-feedback">يجب أن تحتوي على الأقل على 8 أحرف</div>
                                    <span asp-validation-for="STU_PASS" class="text-danger"></span>
                                </div>
                                <div class="password-strength mt-2">
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- القسم السفلي -->
                    <div class="row g-3 mt-2">
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-flag me-1"></i> الجنسية</label>
                                <input type="text" asp-for="NATIONALITY" class="form-control" required list="countries" />
                                <datalist id="countries">
                                    <option value="سوري" />
                                    <option value="عراقي" />
                                    <option value="أردني" />
                                    <option value="لبناني" />
                                    <option value="فلسطيني" />
                                </datalist>
                                <div class="invalid-feedback">يرجى اختيار جنسية</div>
                                <span asp-validation-for="NATIONALITY" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-percent me-1"></i> معدل الثانوية</label>
                                <input type="number" asp-for="BAC_AVG" step="0.01" class="form-control" required min="50" max="100" />
                                <div class="invalid-feedback">يجب أن يكون بين 50 و100</div>
                                <span asp-validation-for="BAC_AVG" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-account-group me-1"></i> نوع المفاضلة</label>
                                <select asp-for="COMPAR_TYPE" class="form-select" required>
                                    <option value="عام">عام</option>
                                    <option value="ذوي احتياجات خاصة">ذوي احتياجات خاصة</option>
                                </select>
                                <div class="invalid-feedback">يرجى اختيار نوع المفاضلة</div>
                                <span asp-validation-for="COMPAR_TYPE" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-door-open me-1"></i> رقم الفصل العملي</label>
                                <input type="text" asp-for="CLS_ID" class="form-control" required pattern="[A-Z0-9]{3,}" />
                                <div class="invalid-feedback">يجب أن يحتوي على 3 أحرف أو أرقام على الأقل</div>
                                <span asp-validation-for="CLS_ID" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إغلاق</button>
                    <button type="submit" class="btn btn-primary">حفظ</button>
                </div>
            </form>
        </div>
    </div>
</div>