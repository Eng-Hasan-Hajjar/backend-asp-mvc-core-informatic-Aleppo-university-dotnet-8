@model informatic_asp_mvc.Models.Student
@{
    Layout = null;
}

<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-modal="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">تعديل بيانات الطالب</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editForm" asp-action="Edit" method="post">
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="STU_ID" />
                    <div class="row g-3">
                        <!-- العمود الأول -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-account-outline me-1"></i> الاسم الكامل</label>
                                <input type="text" asp-for="STU_NAME" class="form-control" required />
                                <span asp-validation-for="STU_NAME" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="NATIONAL_NUMBER" class="form-label"><i class="mdi mdi-card-account-details me-1"></i> الرقم الوطني</label>
                                <input asp-for="NATIONAL_NUMBER" class="form-control" required />
                                <span asp-validation-for="NATIONAL_NUMBER" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="PHONE_NUMBER" class="form-label"><i class="mdi mdi-phone me-1"></i> رقم الهاتف</label>
                                <input asp-for="PHONE_NUMBER" class="form-control" required />
                                <span asp-validation-for="PHONE_NUMBER" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-human-male me-1"></i> اسم الأب</label>
                                <input type="text" asp-for="STU_FTHR" class="form-control" required />
                                <span asp-validation-for="STU_FTHR" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-human-female me-1"></i> اسم الأم</label>
                                <input type="text" asp-for="STU_MTHR" class="form-control" required />
                                <span asp-validation-for="STU_MTHR" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-calendar me-1"></i> تاريخ الميلاد</label>
                                <input type="date" asp-for="STU_BRTH" class="form-control" required />
                                <span asp-validation-for="STU_BRTH" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- العمود الثاني -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-account me-1"></i> الاسم المستعار</label>
                                <input type="text" asp-for="STU_NICK" class="form-control" />
                                <span asp-validation-for="STU_NICK" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-calendar-check me-1"></i> تاريخ الالتحاق</label>
                                <input type="date" asp-for="JOIN_DATE" class="form-control" required />
                                <span asp-validation-for="JOIN_DATE" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-school me-1"></i> السنة الدراسية</label>
                                <select asp-for="STU_YEAR" class="form-select" required>
                                    <option value="" disabled>اختر السنة</option>
                                    <option value="1">الأولى</option>
                                    <option value="2">الثانية</option>
                                    <option value="3">الثالثة</option>
                                    <option value="4">الرابعة</option>
                                </select>
                                <span asp-validation-for="STU_YEAR" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-shield-account me-1"></i> الحالة الدراسية</label>
                                <select asp-for="STU_STATE" class="form-select" required>
                                    <option value="ناجح">ناجح</option>
                                    <option value="منقول">منقول</option>
                                    <option value="راسب">راسب</option>
                                </select>
                                <span asp-validation-for="STU_STATE" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-lock me-1"></i> كلمة المرور</label>
                                <div class="input-group">
                                    <input type="password" asp-for="STU_PASS" class="form-control" required minlength="8" id="editPasswordInput" />
                                    <span asp-validation-for="STU_PASS" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- القسم السفلي -->
                    <div class="row g-3 mt-2">
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-flag me-1"></i> الجنسية</label>
                                <select asp-for="NATIONALITY" class="form-select" required>
                                    <option value="سوري">سوري</option>
                                    <option value="عراقي">عراقي</option>
                                    <option value="أردني">أردني</option>
                                    <option value="لبناني">لبناني</option>
                                    <option value="فلسطيني">فلسطيني</option>
                                </select>
                                <span asp-validation-for="NATIONALITY" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-percent me-1"></i> معدل الثانوية</label>
                                <input type="number" asp-for="BAC_AVG" class="form-control" required step="0.01" min="50" max="100" />
                                <span asp-validation-for="BAC_AVG" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-account-group me-1"></i> نوع المفاضلة</label>
                                <select asp-for="COMPAR_TYPE" class="form-select" required>
                                    <option value="عام">عام</option>
                                    <option value="ذوي احتياجات خاصة">ذوي احتياجات خاصة</option>
                                </select>
                                <span asp-validation-for="COMPAR_TYPE" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-door-open me-1"></i> رقم الفصل العملي</label>
                                <input type="number" asp-for="CLS_ID" class="form-control" required />
                                <span asp-validation-for="CLS_ID" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label"><i class="mdi mdi-gender-male-female me-1"></i> الجنس</label>
                                <select asp-for="STU_GENDER" class="form-select" required>
                                    <option value="ذكر">ذكر</option>
                                    <option value="أنثى">أنثى</option>
                                </select>
                                <span asp-validation-for="STU_GENDER" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إغلاق</button>
                    <button type="submit" class="btn btn-primary">حفظ التغييرات</button>
                </div>
            </form>
        </div>
    </div>
</div>



